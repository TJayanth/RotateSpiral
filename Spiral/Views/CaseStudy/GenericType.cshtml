@model Spiral.Models.CaseStudyModel

@{
    ViewBag.Title = "GenericType";
}

<h2>GenericType</h2>

<div>
    <ul>
        @Html.ActionLink("Back to DashBoard", "Index")   |
        @Html.ActionLink("Case Study", "CaseStudy")
    </ul>
</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.rotationTimes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.rotationTimes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rotationTimes, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rotate" class="btn btn-success" />
            </div>
        </div>
    </div>
}

@if (Model!=null && Model.genericOutput != null)
{
    <div class="col-md-12">
        <h3>Generic Output</h3>
        <table class="table table-bordered">
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    @for (int j = 0; j < 5; j++)
                    {
                        <td>
                            @Html.DisplayFor(m => m.genericOutput[i][j], new { @class = "col-md-2" })
                        </td>
                    }
                </tr>
            }
        </table>
    </div>
}


